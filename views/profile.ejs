                            </li>
                            <% }) %>
                    </ul>
                    <% } else { %>
                        <p>You don't have any playlists yet.</p>
                        <% } %>
            </section>

            <hr>

            <section>
                <h2>Listening History</h2>

                <% if (history && history.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Song</th>
                                <th>Artist</th>
                                <th>Played At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% history.forEach(function(item) { %>
                                <tr>
                                    <td>
                                        <%= item.song_title %>
                                    </td>
                                    <td>
                                        <%= item.artist %>
                                    </td>
                                    <td>
                                        <%= item.played_at %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p>No listening history yet.</p>
                        <% } %>
            </section>
            <% } else { %>
                <h1>Please login</h1>
                <% } %>
    </div>