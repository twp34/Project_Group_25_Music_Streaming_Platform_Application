            <hr>

            <section>
                <h2>Your Playlists</h2>

                <% if (playlists && playlists.length > 0) { %>
                    <ul>
                        <% playlists.forEach(function(playlist) { %>
                            <li>
                                <h3>
                                    <%= playlist.name %>
                                </h3>

                                <!-- <% if (playlist.songs && playlist.songs.length > 0) { %>
